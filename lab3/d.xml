let $d:=doc("https://www.dbis.informatik.uni-goettingen.de/Mondial/mondial.xml")
let $c := $d/mondial/country

let $list_data := (

  let $country_data := (
    for $country in $c

    let $city_data := (
      for $city in $country//city

      let $alias_data := (
        for $name in $city/name
        return (<alias>{$name/text()}</alias>,"&#xA;")
      )
      return
      (<city>{$city/@*[name() = "id"]}&#xA;
        {$alias_data}&#xA;
      </city>)
    )
    let $country_name_tag :=
    (<country name="{$country/name}">&#xA;
      {$city_data}&#xA;
    </country>)
    return ("&#xA;",$country_name_tag)
  )
  return $country_data
)
return
<mylist>&#xA;
  {$list_data}&#xA;
</mylist>

(: INDENT ERRORS)
